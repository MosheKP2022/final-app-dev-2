<div class="card">
    <div class="list-group-item">
      <div class="media">
      <%= image_tag comment.commenter.profile_picture, class: "rounded-circle mr-2", width: 50 %>
        <div class="media-body">
        <div class="d-flex align-items-center justify-content-between">
          <h6 class="mt-0"> 
          <%= comment.commenter.first_name %> <%= comment.commenter.last_name %>
          </h6>
          <div>
          <% if current_user == comment.commenter %>
            <%= link_to edit_comment_path(comment), 
            remote: :true,
            class: "btn btn-link btn-sm text-muted" do %>
              <i class="fas fa-edit fa-fw"></i>
            <% end %>

            <%= link_to comment, method: :delete, 
            remote: :true,
            class: "btn btn-link btn-sm text-muted" do %>
              <i class="fas fa-trash fa-fw"></i>
            <% end %>
          <% end %>
        </div>
      </div>

          <p> <%= comment.body %> </p>
        </div>
      </div>
 </div>
  </div>