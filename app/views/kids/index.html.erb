
<h1>Kids</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Dob</th>
      <th>About me</th>
      <th>School</th>
      <th>Family members count</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @kids.each do |kid| %>
      <tr>
        <td><%= kid.first_name %></td>
        <td><%= kid.last_name %></td>
        <td><%= kid.dob %></td>
        <td><%= kid.about_me %></td>
        <td><%= kid.school %></td>
        <td><%= kid.family_members_count %></td>
        <td><%= link_to 'Show', kid %></td>
        <td><%= link_to 'Edit', edit_kid_path(kid) %></td>
        <td><%= link_to 'Destroy', kid, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

